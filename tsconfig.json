{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "target": "es2022",
    "jsx": "preserve",
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@common": [
        "./common"
      ]
    }
  },
  "include": [
    "index.ts",
    "server/**/*"
  ],
  "exclude": [
    "client",
    "dist",
    "node_modules"
  ]
}
